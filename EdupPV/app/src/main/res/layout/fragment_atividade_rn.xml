<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutatvirn"
    android:background="#fff"
    tools:context=".atividadeRN">


    <LinearLayout
        android:id="@+id/layoutatvrn"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="8dp"
        android:background="#fff"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Selecione o Jelco recomendado para administração de medicamentos em recém nascidos por 2 segundos e arraste até o bebê"
                android:textColor="#000" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardbb"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_gravity="center"
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/layoutbb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:src="@drawable/recemnascido" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutatvrn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardjelcoamarelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="1dp"
            app:cardElevation="5dp">
            <ImageView
                android:id="@+id/imgjelcoamarelo"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/img_jelco_amarelo" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardjelcocinza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="1dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/imgjelcocinza"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/img_jelco_cinza" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/cardjelcoazul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="1dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/imgjelcoazul"
                android:layout_width="100dp"
                android:layout_height="141dp"
                android:layout_gravity="center"
                android:src="@drawable/img_jelco_azul" />
        </android.support.v7.widget.CardView>
    </FrameLayout>

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true">
           <Button
               android:id="@+id/buttonAnt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="bottom"
               android:background="@color/colorPrimary"
               android:textColor="#fff"
               android:text="Anterior" />

           <Button
               android:id="@+id/buttonProx"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="bottom|right"
               android:background="@color/colorPrimary"
               android:textColor="#fff"
               android:text="Próximo" />
       </FrameLayout>
</RelativeLayout>