<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".atividadeRN">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:text="Selecione o Jelco recomendado para administração de medicamentos em recém nascidos e arraste até o bebê" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="1dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/layoutbb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="156dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:src="@drawable/recemnascido" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_gravity="center|left"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp">
        <ImageView
            android:id="@+id/imgjelcoamarelo"
            android:layout_width="120dp"
            android:layout_height="150dp"

            android:src="@drawable/img_jelco_amarelo"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="65dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp">
    <ImageView
        android:id="@+id/imgjelcocinza"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/img_jelco_cinza" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_gravity="center|right"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp">

    <ImageView
        android:id="@+id/imgjelcoazul"
        android:layout_width="120dp"
        android:layout_height="150dp"

        android:src="@drawable/img_jelco_azul"/>
    </android.support.v7.widget.CardView>


</FrameLayout>