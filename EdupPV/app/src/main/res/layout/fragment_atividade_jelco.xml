<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".atividadeJelco"
    android:id="@+id/layoutatvjelco">

   <android.support.v7.widget.CardView
       android:id="@+id/cardtex1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="1dp"
       app:cardElevation="5dp"
       android:layout_marginTop="2dp"
       android:layout_marginBottom="5dp">
       <TextView
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Arraste os números aos jelcos correspondentes"
           android:textColor="#000"/>
   </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_below="@+id/cardtex1"
        android:id="@+id/card14"
       android:layout_width="100dp"
       android:layout_height="70dp"
       app:cardCornerRadius="1dp"
       app:cardElevation="5dp">
        <TextView
            android:id="@+id/txt14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="14"
            android:textColor="#000"
            android:textSize="20dp" />
   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/card14"
        android:id="@+id/card20"
        android:layout_marginTop="5dp"
        android:layout_gravity="top"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/txt20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="20"
            android:textColor="#000"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card18"
        android:layout_below="@id/card20"
        android:layout_gravity="top|left"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/txt18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="18"
            android:textColor="#000"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/card18"
        android:id="@+id/card16"
        android:layout_marginTop="5dp"
        android:layout_gravity="top|left"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/txt16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="16"
            android:textColor="#000"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/card16"
        android:id="@+id/card24"
        android:layout_marginTop="5dp"
        android:layout_gravity="top|left"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/txt24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="24"
            android:textColor="#000"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/cardtex1"
        android:id="@+id/cardjelcorosa"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/layoutJelcoRosa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="255dp"
                android:layout_height="107dp"
                android:src="@drawable/img_jelco_rosa" />
        </LinearLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_below="@id/cardjelcorosa"
        android:id="@+id/cardjelcolaranja"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="70dp"
      android:layout_alignParentRight="true"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/layoutJelcoLaranja"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:src="@drawable/img_jelco_laranja" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/cardjelcolaranja"
        android:id="@+id/cardjelcoverde"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutJelcoVerde"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="255dp"
                android:layout_height="107dp"
                android:src="@drawable/img_jelco_verde" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardjelcoamarelo"
        android:layout_below="@id/cardjelcoverde"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutJelcoAmarelo"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="255dp"
                android:layout_height="107dp"
                android:src="@drawable/img_jelco_amarelo" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/cardjelcoamarelo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutJelcoCinza"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="255dp"
                android:layout_height="107dp"
                android:src="@drawable/img_jelco_cinza" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/buttonAnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:text="Anterior" />

        <Button
            android:id="@+id/buttonProx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:text="Próximo" />

    </FrameLayout>
</RelativeLayout>